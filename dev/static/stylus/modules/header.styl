.header

  .top
    background-color: $violet


    font-size: 12px
    line-height: 21px
    font-weight: 600
    color: $white
    letter-spacing: 1px

    &__right
      display: flex
      align-items: center
      height: 100%

    .container
      display: flex
      justify-content: space-between
      align-items: center
      height: 41px

      
  &__action
    text-transform: uppercase

    a
      &::after
        content: ''
        display: inline-block
        width: 5px
        height: 6px
        background-image: url('../img/general/i-triangle-right.png')
        background-repeat: no-repeat
        background-size: 100%
        margin-left: 10px
        position: relative
        top: -1px

      &:hover
        text-decoration: underline

  .links

    &__list
      height: 100%
      display: flex
      align-items: center

    &__item
      text-transform: uppercase
      position: relative
      padding-right: 14px
      margin-right: 16px

      &:hover
        text-decoration: underline

      &::after
        content: ''
        display: block
        width: 1px
        height: 19px
        background-color: $white
        position: absolute
        top: 0
        right: 0


  .cart
    height: 100%

    &:hover

      .cart__text
        text-decoration: underline


    &__link
      display: flex
      align-items: center

      text-transform: uppercase

    &__text
      margin-right: 15px



    &__counter
      display: flex
      align-items: center
      justify-content: center
      width: 40px
      height: 41px
      background-color: $yellow

      color: $black

  &__logo
    width: 278px

    a
      display: inline-block
      width: 93px

  &__bottom
    position: relative
    padding-top: 19px

    .container
      display: flex
      justify-content: space-between


  .menu

    &__list
      display: flex

    &__item
      padding: 8px 30px 27px
      cursor: pointer

      font-size: 16px
      line-height: 21px
      color: $gray_dark
      font-weight: 600
      text-transform: uppercase

      &:hover

        a

          &::after
            transform: scale(1)

      a
        position: relative

        &::after
          content: ''
          display: block
          position: absolute
          bottom: -10px
          left: 0
          right: 0
          height: 2px
          background-color: $blue
          transform: scale(0)
          transition: .3s ease transform


      &:hover

        .submenu
          display: block

    .submenu
      display: none
      position: absolute
      top: 100%
      left: 0
      right: 0
      padding-top: 22px
      padding-bottom: 19px
      background-color: $white

      &__list
        display: flex
        justify-content: center

      &__item
        margin-right: 46px

        &:last-child
          margin-right: 0

        &:hover

          .submenu__text
            text-decoration: underline

      &__img
        margin-bottom: 9px

      &__text
        font-size: 16px
        line-height: 21px
        letter-spacing: 0
        text-align: center
        text-transform: none
        font-weight: 400

  .search
    padding-top: 7px

    &__form
      position: relative

    &__input
      width: 278px
      padding-bottom: 7px
    
    &__button
      position: absolute
      z-index: 1
      cursor: pointer
      top: 5px
      right: 0
      width: 12px
      height: 12px
      background-image: url('../img/general/i-search.png')




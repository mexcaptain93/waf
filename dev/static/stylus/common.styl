.index-block
  display: block
  width: 100%
  position: relative

  &:hover

    .index-block

      &__btn
        color: $black

        span
          background-color: $white

      &__overlay
        background-color: alpha($black, 0.3)

  &__text
    position: absolute
    bottom: 40px
    left: 0
    right: 0
    z-index: 2

    @media $tablet
      bottom: 37px

  &__name
    margin-bottom: 28px

    font-size: 36px
    text-transform: uppercase
    line-height: 21px
    color: $white
    text-align: center
    letter-spacing: 1px

    @media $tablet
      margin-bottom: 25px

      font-size: 30px

  &__overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 1
    transition .3s ease background-color


@import 'components/components.styl'
@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'ui.styl'
@import 'libs.styl'
@import 'common.styl'

html
	font-size baseFontSize
	min-height 100%
	line-height 1.3

body
	font-family mainFont
	height 100%

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color inherit
	text-decoration none

img
	max-width: 100%

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%
	position: relative
	padding-top: 116px

	@media $tablet
		padding-top: 113px

.content
	flex 1 0 auto

.container
	max-width: 1920px
	margin: 0 auto
	padding: 0 12px

	@media $mobile
		padding: 0

	&_full
		padding: 0


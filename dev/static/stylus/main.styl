@import 'components/components.styl'
@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'
@import 'ui.styl'
@import 'common.styl'

html
	font-size baseFontSize
	height auto
	min-height: 100vh
	line-height 1.3

body
	font-family mainFont
	min-height: 100vh

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color inherit
	text-decoration none

img
	max-width: 100%
	max-height: 100%

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	min-height: 100vh
	position: relative

.content
	flex 1 0 auto

.container
	max-width: 1624px
	margin: 0 auto
	padding: 0 30px

	@media $small_desktop
		padding: 0 10px

	@media $tablet
		padding: 0 12px

	&_full
		max-width: 1920px
		padding: 0




.wholesale

  &__text
    max-width: 1200px
    margin: 0 auto 36px

    font-size: 18px
    line-height: 24px
    font-weight: 300
    color: $gray_dark2
    text-align: center

    @media $tablet
      font-size: 16px

    @media $mobile
      margin-bottom: 50px

    p
      margin-bottom: 24px

      &:last-child
        margin-bottom: 0

  .like-h1

    @media $tablet
      font-size: 24px


  .reasons
    padding: 0 8px

    @media $tablet
      padding: 0 12px
      margin-bottom: 2px

    .like-h1
      margin-bottom: 43px

    &__list
      display: flex
      flex-wrap: wrap
      justify-content flex-start

    &__item
      width: calc(33.3% - 4px)
      margin-right: 4px
      margin-bottom: 10px

      @media $tablet
        width: calc(50% - 4.5px)
        margin-right: 9px

      @media $small_tablet
        width: 100%
        margin-right: 0


      &:nth-child(3n)
        margin-right: 0

        @media $tablet
          margin-right: 9px

        @media $small_tablet
          margin-right: 0

      &:nth-child(2n)

        @media $tablet
          margin-right: 0

    .reason

      &_opened

        .reason

          &__main
            display: none

          &__more
            display: flex

          &__overlay
            background-color: alpha($black, 0.6)

      &__wrap
        padding-bottom: 100%
        position: relative
        background-repeat: no-repeat
        background-size: cover

      &__overlay
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: alpha($black, 0.3)
        transition .3s ease background-color

      &__main
        display: flex
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        flex-direction: column
        align-items: center
        justify-content: center

      &__more
        display: none
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        padding: 22px 30px
        flex-direction: column

        @media $small_tablet
          padding: 23px

      &__title
        max-width: 330px
        margin: 0 auto 24px

        font-size: 24px
        line-height: 30px
        color: $white
        font-weight: 300
        text-align: center

        @media $tablet
          font-size: 21px
          line-height: 28px

      .more

        &__title
          height: 78px
          flex-shrink: 0
          padding-right: 25px

          font-size: 24px
          line-height: 30px
          font-weight: 300
          color: $white

          @media $tablet
            height: 48px

            font-size: 18px
            line-height: 21px

        &__close
          background-image: url('../img/general/i-close-white-bold.png')
          background-repeat: no-repeat
          background-position: center center
          width: 9px
          height: 9px
          position: absolute
          top: 10px
          right: 3px
          padding: 30px
          cursor: pointer

          &:hover
            opacity: .7

        &__text
          overflow: auto
          border: 4px solid $white
          font-size: 21px
          line-height: 30px
          color: $white
          padding: 15px 22px
          flex-grow: 1

          @media $tablet
            font-size: 14px
            line-height: 18px

          @media $small_tablet
            padding: 10px 15px

          p
            margin-bottom: 30px

          ul

            li
              margin-bottom: 5px

  .form
    margin-bottom: 55px
    padding: 60px 10px
    background-image: url('../img/content/wholesale-form-bg.jpg')
    background-repeat: no-repeat
    background-position: center center
    background-size: cover

    &__wrap
      max-width: 630px
      margin: 0 auto

      @media $mobile
        max-width: 350px

    &__heading
      margin-bottom: 20px

      color: $white
      font-weight: 600
      font-size: 48px
      line-height: 24px
      letter-spacing: 3.85px
      text-transform: uppercase
      text-align: center

      @media $tablet
        font-size: 36px
        line-height: 36px

    &__hint
      margin: 0 auto 27px

      color: $white
      font-weight: 300
      font-size: 18px
      line-height: 24px
      text-align: center

      @media $tablet
        max-width: 500px

      span
        vertical-align: middle

    &__vk-img
      display: inline-block
      margin-left: 16px
      background-image: url('../img/general/wholesale-vk.png')
      width: 36px
      height: 36px
      background-repeat: no-repeat
      background-size: cover
      vertical-align: middle

    &__list
      margin-bottom: 19px



    &__item
      display: flex
      align-items: center
      margin-bottom: 19px

      @media $mobile
        align-content: flex-start
        flex-direction: column
        

    &__label
      width: 150px
      margin-right: 14px

      text-align: right
      color: $white
      font-size: 15px
      line-height: 18px
      letter-spacing: 0

      @media $mobile
        text-align: left
        width: 100%
        margin-right: 0
        margin-bottom: 10px


    &__input
      width: 460px

      @media $mobile
        width: 100%

      .textfield
        width: 100%
        padding-bottom: 14px

        font-size: 16px

      .textarea
        font-size: 16px

    &__privacy
      margin-bottom: 38px

      text-align: center
      font-size: 14px
      line-height: 24px
      color: $white

      a
        color: $yellow
        text-decoration: underline

        &:hover
          text-decoration: none

    &__btn
      text-align: center

      .btn
        max-width: 210px

  .video
    @extend .index .video

    .like-h1
      margin-bottom: 40px
      text-align: center

      @media $mobile
        margin-bottom: 32px

    .container
      max-width: 1920px
      margin: 0 auto
      padding: 0 12px
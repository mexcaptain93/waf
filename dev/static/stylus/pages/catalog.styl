.catalog

  .banner

    &__bg
      height: 200px
      background-repeat: no-repeat
      background-position: center center

    &__text
      display: flex
      justify-content: center
      align-items: center
      height: 100%

      font-size: 72px
      color: $white
      font-weight: bold
      text-transform: uppercase
      text-shadow: 0 1px 1px rgba(0, 0, 0, 0.25)


  .filters
    margin-bottom: 13px

    &__names
      display: flex
      justify-content: space-between
      align-items: flex-start
      margin-bottom: 6px

    &__list
      display: flex
      flex-wrap: wrap

    &__item, &__sort
      position: relative
      border: 1px solid $gray_light5
      padding: 4px 10px 5px;
      min-width: 122px;
      margin-right: 14px
      margin-bottom: 14px
      cursor: pointer
      user-select: none

      font-size: 13px
      line-height: 21px
      font-weight: 600
      color: $gray_dark2

      &:last-child
        margin-right: 0

      &_wide
        min-width: 258px
        
      &_opened
        background: $gray_light5

      &::after 
        content: ''
        display: block
        position: absolute
        top: 11px
        right: 9px
        width: 5px
        height: 6px
        background-image: url('../img/general/i-triangle-right-black.png')
        background-repeat: no-repeat

    .value

      &__list
        display: none
        align-items: center
        justify-content: center
        flex-wrap: wrap
        padding: 11px 15px
        border: 1px solid $gray_light5
        margin-bottom: 20px

        &_opened
          display: flex

        &_color
          padding: 0 15px

          .value

            &__item
              margin: 15px 12px

          i
            display: block
            width: 42px
            height: 42px
            border-radius: 21px
            background-repeat: no-repeat
            background-size: contain

      &__item
        margin: 15px 17px



    &__result-pagination
      display: flex
      justify-content: space-between
      align-items: flex-start

    .result

      &__wrap
        display: flex

      &__text
        margin-right: 13px

        color: $gray_light
        font-size: 13px
        line-height: 21px

      &__list
        display: flex

      &__item
        margin-right: 15px

        a
          padding: 3px 10px

          font-size: 13px
          font-weight: 600
          color: $gray_dark2
          border: 1px solid $gray_dark2

      &__clear
        color: $gray_light
        font-size: 13px
        line-height: 21px
        text-decoration: underline




  .products
    margin-bottom: 50px

    &__list
      display: flex
      flex-wrap: wrap

    &__item
      width: 25%
      margin-bottom: 55px

      .product
        margin: 0 auto
        height: 100%
        justify-content: flex-end

      .promo
        margin: 0 auto
        height: 100%

  .product
    max-width: 337px
    display: flex
    flex-direction: column

    &__image
      height: 290px
      margin-bottom: 20px
      text-align: center

      a
        display: block
        height: 100%

      img
        max-height: 100%

    &__name
      margin-bottom: 2px

      text-align: center
      color: $gray_dark2
      font-size: 15px
      line-height: 21px
      font-weight: 600

    &__price
      margin-bottom: 17px

      text-align: center

    &__btn
      text-align: center


  .promo
    display: flex
    flex-direction: column
    justify-content: center


    &__image

    
    &__btn
      margin-top: 40px

      text-align: center

      .btn
        font-size: 14px
        letter-spacing: 1.68px

      span
        vertical-align: middle
      
      i
        display: inline-block
        vertical-align: middle
        margin-left: 14px
        width: 5px
        height: 6px
        background-repeat: no-repeat
        background-image: url('../img/general/i-triangle-right.png')


.text-page

  &__wrap
    max-width: 1260px

    ul
      margin-left: 18px

      li
        list-style-type: disc
        padding-left: 18px
        margin-bottom: 6px

        font-size: 18px
        line-height: 24px
        color: $gray_dark2

        @media $small_tablet
          font-size: 16px


    p
      margin-bottom: 24px

      font-size: 18px
      line-height: 24px
      color: $gray_dark2

      @media $small_tablet
        font-size: 16px

      &:last-child
        margin-bottom: 0

      & + ul
        margin-top: -17px

  .like-h1
    margin-bottom: 23px

    @media $small_tablet
      font-size: 24px

  .like-h3
    margin-bottom: 26px

    @media $small_tablet
      font-size: 21px



  .center
    margin-bottom: 37px

    text-align: center

    @media $small_tablet
      margin-bottom: 42px


  .two-cols
    display: flex
    padding: 25px 0 54px

    @media $mobile
      flex-direction: column
      padding-bottom: 25px

    &_reverse
      flex-direction: row-reverse

      @media $mobile
        flex-direction: column

      .two-cols

        &__img
          text-align: right

        &__text
          padding-left: 0
          padding-right: 24px

          @media $mobile
            padding-right: 0

    &__img
      width: 50%
      flex-shrink: 0

      @media $small_tablet
        display: flex
        align-items: center
        justify-content: center

      @media $mobile
        width: 100%
        margin-bottom: 14px

    &__text
      display: flex
      flex-direction: column
      align-items: center
      justify-content: center
      padding-left: 24px

      font-weight: 300
      font-size: 21px
      line-height: 30px
      letter-spacing: 0
      color: $gray_dark2

      @media $small_tablet
        font-size: 18px

      @media $mobile
        padding-left: 0

      p
        font-size: inherit
        line-height: inherit
        margin-bottom: 30px

        @media $mobile
          margin-bottom: 24px

  .popup-text
    display: none
    position: fixed
    width: 100%
    height: 100vh
    top: 0
    left: 0
    background-color: $white
    z-index: 2
    padding: 130px 20px 55px
    -webkit-overflow-scrolling:touch;
    
    &__close
      max-width: 1460px
      height: 30px
      position: relative
      margin: 0 auto 35px
      transition: .3s opacity ease
      &:hover
        opacity: .7

      i
        display: block
        background-image: url('../img/general/i-close-thin.png')
        width: 30px
        height: 30px
        background-repeat: no-repeat
        cursor: pointer
        position: absolute
        right: -15px
        top: 0

    &__content
      max-width: 1460px
      margin: 0 auto
      overflow: auto
      height: calc(100% - 65px)

  .bold
    font-weight: 600

  .italic
    font-style: italic

  &__block
    margin-bottom: 46px

    .like-h3
      text-transform: uppercase
      letter-spacing: 1.8px



.catalog-category

  &__list

    .container
      display: flex
      flex-wrap: wrap

      @media $mobile
        padding: 0 6px

  &__item
    width: calc(25% - (15px / 4))
    margin-right: 5px
    margin-bottom: 5px
    position: relative

    @media $tablet
      width: calc(25% - (36px / 4))
      margin-right: 12px
      margin-bottom: 12px

    @media $mobile
      width: calc(50% - 3px)
      margin-right: 6px
      margin-bottom: 6px

    &:nth-child(4n)
      margin-right: 0

    &:nth-child(2n)

      @media $mobile
        margin-right: 0

  .category
    display: block
    padding-bottom: 100%
    background-size: cover

    &:hover

      .category

        &__overlay
          background-color: alpha($black, 0.3)

    &__overlay
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      z-index: 1
      transition .3s ease background-color
      display: flex
      justify-content: center
      align-items: center

    &__text
      position: absolute
      bottom: 17px
      left: 19px

      font-size: 24px
      line-height: 21px
      letter-spacing: 0
      color: $white

      @media $tablet
        bottom: 15px

        line-height: 28px

      @media $small_tablet
        left: 10px
        bottom: 10px

        font-size: 18px
        line-height: 21px


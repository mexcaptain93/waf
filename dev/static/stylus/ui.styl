.input
  border: none
  border-bottom: 1px solid $gray_light

  font-family: mainFont
  font-size: 16px
  line-height: 21px

  &::placeholder
    color: $gray_light2

.button-input
  background: none
  border: none
  appearance: none
  background-repeat: no-repeat
  background-size: 100%

.button
  color: $white
  font-size: 14px
  line-height: 21px
  text-align: center
  text-transform: uppercase
  font-weight: 600
  transition: .3s ease color

  span
    width: 150px
    border: 2px solid #fff;
    padding: 8px 17px;
    display: inline-block;
    transition: .3s ease background-color

  &:hover
    color: $black

    span
      background-color: $white


.burger
  display: block
  position: relative
  overflow: hidden
  margin: 0
  padding: 0
  width: 28px
  height: 28px
  font-size: 0
  text-indent: -9999px
  appearance: none
  box-shadow: none
  border-radius: none
  border: none
  cursor: pointer


  span
    display: block
    position: absolute
    top: 12px
    left: 5px
    right: 5px
    height: 2px
    background: $blue


    &::before, &::after
      position: absolute
      display: block
      left: 0
      width: 100%
      height: 2px
      background-color: $blue
      content: ""
      transition: transform 0.3s

    &::before
      top: -5px

    &::after
      bottom: -5px

  &_opened

    span

      background: transparent

      &::before
        top: 0
        transform: rotate(45deg)
        background: $black

      &::after
        bottom: 0
        transform: rotate(-45deg)
        background: $black
